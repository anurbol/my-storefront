{
  "name": "my-storefront",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "npm install && cd api && uv sync",
    "dev": "concurrently -n next,api -c cyan,magenta \"npm run dev:next\" \"npm run dev:api\"",
    "dev:next": "next dev",
    "dev:api": "cd api && uv run uvicorn main:app --port 8000 --reload",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
